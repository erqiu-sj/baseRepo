{
  "name": "baserepo",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "links": "turbo run links",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "cz": "git add . && pnpm cz-customizable"
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "latest",
    "vitest": "^0.26.3",
    "jsdom": "^21.0.0",
    "@vitest/ui": "^0.27.2"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "@changesets/cli": "^2.26.0",
    "cz-customizable": "^7.0.0",
    "reflect-metadata": "^0.1.13"
  },
  "packageManager": "pnpm@7.26.3"
}
